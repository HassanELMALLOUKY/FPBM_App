<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/avisCard"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp">

    <LinearLayout
        style="@style/Base.CardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_btn"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/news_icon"/>

            <TextView
                android:id="@+id/avisTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/comsb"
                android:paddingLeft="15dp"
                android:text="TextView"
                android:textSize="15sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/black"
                />
        </LinearLayout>








        <View
            style="@style/AppTheme.SingleHorizontalLineStyle"
            android:layout_marginStart="15dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="15dp" />


        <TextView
            android:id="@+id/avisDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="0dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingEnd="10dp"
            android:text="avis description"
            android:textColor="@color/black" />




        <TextView
            android:id="@+id/avisDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="end"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/comsb"
            android:text="TextView"
            android:paddingLeft="6dp"
            android:textColor="#7868e5"
            android:textSize="10sp" />


    </LinearLayout>

</androidx.cardview.widget.CardView>